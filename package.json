{
  "name": "mindscript",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "description": "MindScript AI audio content creation platform",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "test": "turbo run test",
    "test:coverage": "turbo run test:coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:report": "playwright show-report",
    "typecheck": "turbo run typecheck",
    "clean": "turbo run clean && rm -rf node_modules/.cache",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "turbo run build --filter='@mindscript/*' && changeset publish",
    "check:env": "node scripts/check-environment.js",
    "seed": "node scripts/seed-data.js dev",
    "seed:prod": "node scripts/seed-data.js prod",
    "migrate:dev": "node scripts/apply-migrations-api.js",
    "setup": "npm install && npm run check:env"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@faker-js/faker": "^10.0.0",
    "@playwright/test": "^1.55.0",
    "@types/node": "^20.10.0",
    "@vitest/coverage-v8": "^1.0.0",
    "chalk": "^5.6.2",
    "prettier": "^3.1.0",
    "turbo": "^1.11.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "packageManager": "npm@10.2.3"
}
