{
  "extends": "../../packages/config/typescript.json",
  "compilerOptions": {
    "baseUrl": ".",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@mindscript/ui": [
        "../../packages/ui"
      ],
      "@mindscript/ui/*": [
        "../../packages/ui/*"
      ],
      "@mindscript/types": [
        "../../packages/types"
      ],
      "@mindscript/types/*": [
        "../../packages/types/*"
      ],
      "@mindscript/schemas": [
        "../../packages/schemas"
      ],
      "@mindscript/schemas/*": [
        "../../packages/schemas/*"
      ]
    },
    "incremental": true,
    "strict": false,
    "strictNullChecks": false,
    "noImplicitAny": false
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "src/test/**",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx"
  ]
}
