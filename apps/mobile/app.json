{
  "expo": {
    "name": "MindScript",
    "slug": "mindscript",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "scheme": "mindscript",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#F7F8FC"
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.mindscript.app",
      "jsEngine": "hermes",
      "infoPlist": {
        "UIBackgroundModes": ["audio"],
        "NSSupportsCarPlay": true
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#F7F8FC"
      },
      "package": "com.mindscript.app",
      "jsEngine": "hermes",
      "permissions": ["FOREGROUND_SERVICE"]
    },
    "plugins": [
      "expo-router"
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
